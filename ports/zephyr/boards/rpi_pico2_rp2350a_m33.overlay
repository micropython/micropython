/ {
	chosen {
		/* Use USB CDC ACM as the console. */
		zephyr,console = &cdc_acm_uart0;
	};
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		second_stage_bootloader: partition@0 {
			label = "second_stage_bootloader";
			reg = <0x00000000 0x100>;
			read-only;
		};

		code_partition: partition@100 {
			label = "code-partition";
			reg = <0x0000100 (DT_SIZE_M(1) - 0x100)>;
			read-only;
		};

		storage_partition: partition@100000 {
			label = "storage";
			reg = <0x00100000 DT_SIZE_M(3)>;
		};
	};
};

&zephyr_udc0 {
	cdc_acm_uart0: cdc_acm_uart0 {
		compatible = "zephyr,cdc-acm-uart";
	};
};

&i2c1 {
	clock-frequency = <I2C_BITRATE_STANDARD>;
	status = "okay";
	pinctrl-0 = <&i2c1_default>;
	pinctrl-names = "default";
	zephyr,deferred-init;
};

&uart0 {
	status = "okay";
	current-speed = <115200>;
	zephyr,deferred-init;
};

&pinctrl {
	uart1_default: uart1_default {
		group1 {
			pinmux = <UART1_TX_P4>;
		};
		group2 {
			pinmux = <UART1_RX_P5>;
			input-enable;
		};
	};
};

&uart1 {
	status = "okay";
	current-speed = <115200>;
	zephyr,deferred-init;
	/* A pinctrl struct MUST have been allocated at build time to use dynamic pinctrl,
	 * but it can be nonsense if needed as the device is deferred-init
	 * and pinctrl won't be applied until device init.
	 */
	pinctrl-0 = <&uart1_default>;
	pinctrl-names = "default";

};

&i2c0 {
	status = "okay";
	zephyr,deferred-init;
};

&spi0 {
	status = "okay";
	zephyr,deferred-init;
};

&pinctrl {
	spi1_default: spi1_default {
		group1 {
			pinmux = <SPI1_TX_P11>, <SPI1_CSN_P13>, <SPI1_SCK_P14>;
		};
		group2 {
			pinmux = <SPI1_RX_P12>;
			input-enable;
		};
	};
};

&spi1 {
	status = "okay";
	zephyr,deferred-init;
	pinctrl-0 = <&spi1_default>;
	pinctrl-names = "default";
};

&adc {
	/* And conversely, any enabled device with pinctrl must have their driver built */
	status = "disabled";
};
